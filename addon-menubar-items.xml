<PropertyList>
    <meta>
        <file-type type="string">FlightGear add-on menu bar items</file-type>
        <format-version type="int">1</format-version>
    </meta>
    <menubar-items>
        <menu>
            <label>Nasal Browser</label>
            <enabled type="bool">true</enabled>

            <item>
                <label>Open Browser...</label>
                <name>nasal-browser-addon-main</name>
                <binding>
                    <command>nasal</command>
                    <script><![CDATA[
                        globals['__addon[org.flightgear.addons.NasalNsBrowser]__'].NasalBrowserDialog.new();
                    ]]></script>
                </binding>
            </item>

            <item>
                <label>Filters...</label>
                <name>nasal-browser-addon-filters</name>
                <binding>
                    <command>nasal</command>
                    <script><![CDATA[
                        globals['__addon[org.flightgear.addons.NasalNsBrowser]__'].FiltersDialog.new();
                    ]]></script>
                </binding>
            </item>

            <!-- <item>
